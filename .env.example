# =============================================================================
# Portfolio Application Environment Configuration Template
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL (Required for production)
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://username:password@localhost:5432/portfolio_db"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port for the Express server (default: 5000)
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# Secret key for session encryption (REQUIRED - Change in production)
SESSION_SECRET="your-super-secure-session-secret-key-change-this-in-production"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS origins (comma-separated list of allowed origins)
CORS_ORIGIN="http://localhost:3000,http://localhost:5173,https://your-domain.com"

# =============================================================================
# EMAIL CONFIGURATION (Optional - for contact form)
# =============================================================================
# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Google Analytics ID (Optional)
VITE_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# =============================================================================
# PERSONAL INFORMATION
# =============================================================================
VITE_DEVELOPER_NAME="Your Name"
VITE_DEVELOPER_EMAIL="your-email@example.com"
VITE_DEVELOPER_PHONE="+1-234-567-8900"
VITE_DEVELOPER_LOCATION="Your City, Your Country"

# Social Media Links
VITE_GITHUB_URL="https://github.com/your-username"
VITE_LINKEDIN_URL="https://linkedin.com/in/your-profile"
VITE_TWITTER_URL="https://twitter.com/your-handle"

# =============================================================================
# DEPLOYMENT VARIABLES
# =============================================================================
# For Heroku deployment
HEROKU_APP_NAME="your-app-name"

# For Vercel deployment
VERCEL_PROJECT_ID="your-project-id"
VERCEL_ORG_ID="your-org-id"

# For Railway deployment
RAILWAY_PROJECT_ID="your-project-id"